<!-- Pi model names and overclock settings.
     There are 3 levels of overclock, normal, middle and higher.
     Normal is required and should be the default.
     If higher is defined then middle is required also.
     If middle is defined and higher is not, then the GUI will display the setting as Turbo.

     If no normal profile is defined, then overclocking will not be available
     for that model. -->
     
<pimodels>
  <model code="legacy" name="B">
    <normal>
      <arm_freq>850</arm_freq>
      <sdram_freq>400</sdram_freq>
      <core_freq>375</core_freq>
      <initial_turbo>0</initial_turbo>
      <over_voltage>0</over_voltage>
      <over_voltage_sdram>0</over_voltage_sdram>
      <force_turbo>0</force_turbo>
    </normal>
    <middle>
      <arm_freq>900</arm_freq>
      <sdram_freq>400</sdram_freq>
      <core_freq>375</core_freq>
      <initial_turbo>0</initial_turbo>
      <over_voltage>0</over_voltage>
      <over_voltage_sdram>0</over_voltage_sdram>
      <force_turbo>0</force_turbo>
    </middle>
    <higher>
      <arm_freq>950</arm_freq>
      <sdram_freq>450</sdram_freq>
      <core_freq>450</core_freq>
      <initial_turbo>0</initial_turbo>
      <over_voltage>6</over_voltage>
      <over_voltage_sdram>0</over_voltage_sdram>
      <force_turbo>0</force_turbo>
    </higher>
  </model>
 
